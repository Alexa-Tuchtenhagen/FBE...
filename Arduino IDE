// Motor driver pins
const int ENA = 5;
const int IN1 = 3;
const int IN2 = 2;

// LED pins
const int LED1 = 12;
const int LED2 = 13;

void setup(){
  // Set motor control pins as outputs
  pinMode(ENA, OUTPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);

  // Set LED pins as outputs
  pinMode(LED1, OUTPUT);
  pinMode(LED2, OUTPUT);

  // Turn on both LEDs
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);

  // Set motor speed (25 out of 255)
  analogWrite(ENA, 200);
}

void loop() {
  // Motor and LEDs stay on
}
